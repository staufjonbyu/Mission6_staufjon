@{
    ViewData["Title"] = "Delete Movie Entry";
}
@model MovieCollection
<h2>Confirma Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Title </h3>

<!--Form for deleting-->
<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>